{
    "extends": "solium:recommended",
    "plugins": [
	"security"
    ],
    "rules": {
	"quotes": [
	    "error",
	    "double"
	],
	"indentation": [
	    "error",
	    4
	],
	"linebreak-style": [
	    "error",
	    "unix"
	],
	"security/no-block-members": "off",
        "security/no-assign-params": "off",
        "security/no-call-value": "off",
        "error-reason": "off",
	"operator-whitespace": "off"
    }
}
